{
	"compileOnSave": true,
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"declaration": false,
		"experimentalDecorators": true,
		"removeComments": true,
		"strictNullChecks": true,
		"strict": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noLib": false,
		"preserveConstEnums": true,
		"suppressImplicitAnyIndexErrors": true,
		"sourceMap": true,
		"types": ["node"]
	},
	"files": [
		"app.ts"
	]
}